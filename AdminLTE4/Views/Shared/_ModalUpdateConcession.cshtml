<!-- Modal Edit -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <form id="editForm" class="modal-content shadow rounded-3 border-0">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editModalLabel">Edit Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body px-4 py-3">
                <input type="hidden" id="edit-id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="edit-order" class="form-label">Order Number</label>
                        <input type="text" class="form-control" id="edit-order" placeholder="Masukkan Order Number" />
                    </div>
                    <div class="col-md-6">
                        <label for="edit-batch" class="form-label">Batch Number</label>
                        <input type="text" class="form-control" id="edit-batch" placeholder="Masukkan Batch Number" />
                    </div>
                    <div class="col-md-6">
                        <label for="edit-part" class="form-label">Part Number</label>
                        <input type="text" class="form-control" id="edit-part" placeholder="Masukkan Part Number" />
                    </div>
                    <div class="col-md-6">
                        <label for="edit-description" class="form-label">Description</label>
                        <input type="text" class="form-control" id="edit-description" placeholder="Masukkan Deskripsi" />
                    </div>
                    <div class="col-md-6">
                        <label for="edit-concession" class="form-label">Concession</label>
                        <input type="text" class="form-control" id="edit-concession" placeholder="Masukkan Concession" />
                    </div>
                    <div class="col-md-6">
                        <label for="edit-remarks" class="form-label">Remarks</label>
                        <input type="text" class="form-control" id="edit-remarks" placeholder="Masukkan Catatan" />
                    </div>
                    <div class="col-md-12">
                        <label for="edit-labelForm" class="form-label">Label Form</label>
                        <input type="text" class="form-control" id="edit-labelForm" placeholder="Masukkan Label Form" />
                    </div>
                </div>
            </div>

            <div class="modal-footer px-4 py-3">
                <button type="submit" class="btn btn-secondary">
                    <i class="bi bi-save me-1"></i> Simpan Perubahan
                </button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Batal
                </button>
            </div>
        </form>
    </div>
</div>
